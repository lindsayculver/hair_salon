<h2><%= @stylist.name() %></h2>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <input id="name" name="name" type="hidden">
  <button type="submit">Delete Stylist</button>
</form>

<% if @stylist.clients().any?() %>
  <h3> <%= @stylist.name() %> 's clients:</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><%= client.name() %></li>
      <% end %>
  </ul>
  <% else %>
<% end %>


  <h3>Add to <%= @stylist.name() %> 's client list:</h3>

  <form action="/clients" method="post">
    <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

    <label for="name">Client Name:</label>
    <input name="_method" type="hidden" value="submit">
    <input id="name" name="name" type="text">
    <button type="submit">Add Client</button>
  </form>

<br>
<div class="container">
  <a href="/">Home</a>
  <br>
  <a href="/stylists">View All Stylists</a>
</div>
